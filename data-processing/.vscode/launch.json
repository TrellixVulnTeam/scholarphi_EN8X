{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Run Main Script",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/run.py",
      "console": "integratedTerminal",
      "args": [
        "arxiv_ids.txt",
        "-v",
        "--skip-fetch",
        "--skip-database",
        "--annotate-pdf",
        "--save-images"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "."
      }
    },
    {
      "name": "Extract Equation Tokens",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/process.py",
      "console": "integratedTerminal",
      "args": ["extract-equation-tokens"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "."
      }
    },
    {
      "name": "Colorize Equation Tokens",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/process.py",
      "console": "integratedTerminal",
      "args": ["colorize-equation-tokens"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "."
      }
    },
    {
      "name": "Locate Tokens",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/process.py",
      "console": "integratedTerminal",
      "args": ["locate-equation-token-hues"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": ".",
        "PATH": "/usr/local/bin"
      }
    }
  ]
}
