    "@types/nconf": "^0.10.0",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "@hapi/hapi": "^18.4.1",
